@*
    Browser Tabs Component
    Renders the browser tabs UI with scroll buttons when many tabs
*@

<div id="browserTabsContainer" class="browser-tabs-container" style="display: none;">
    <button class="browser-tabs-scroll-btn" id="browserTabsScrollLeft" type="button" onclick="if(window.browserTabs&&window.browserTabs.scrollTabs){window.browserTabs.scrollTabs('left');}" title="Scroll left" aria-label="Scroll tabs left">
        <i class="bi bi-chevron-left"></i>
    </button>
    <div id="browserTabsScroll" class="browser-tabs-scroll">
        <!-- Tabs will be rendered here by JavaScript -->
    </div>
    <button class="browser-tabs-scroll-btn" id="browserTabsScrollRight" type="button" onclick="if(window.browserTabs&&window.browserTabs.scrollTabs){window.browserTabs.scrollTabs('right');}" title="Scroll right" aria-label="Scroll tabs right">
        <i class="bi bi-chevron-right"></i>
    </button>
</div>

<div id="browserTabContent" class="browser-tab-content" style="display: none;">
    <!-- Tab content will be loaded here via AJAX -->
</div>

<script src="~/js/browser-tabs.js"></script>

