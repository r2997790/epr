@{
    ViewData["Title"] = "Flow Blueprints";
}

<div class="container">
    <h1>Flow Blueprints</h1>
    
    <div class="mb-3">
        <button id="seedDefaultsBtn" class="btn btn-primary">Seed Default Blueprints</button>
        <button id="refreshBtn" class="btn btn-secondary">Refresh</button>
    </div>
    
    <div id="blueprintsList" class="row">
        <!-- Blueprints will be loaded here -->
    </div>
</div>

@section Scripts {
    <script>
        async function loadBlueprints() {
            try {
                const response = await fetch('/api/flowblueprints');
                const blueprints = await response.json();
                
                const container = document.getElementById('blueprintsList');
                container.innerHTML = '';
                
                blueprints.forEach(blueprint => {
                    const card = document.createElement('div');
                    card.className = 'col-md-6 mb-3';
                    card.innerHTML = `
                        <div class="card">
                            <div class="card-body">
                                <h5 class="card-title">${blueprint.name}</h5>
                                <p class="card-text"><strong>Key:</strong> ${blueprint.key}</p>
                                <p class="card-text">${blueprint.purpose}</p>
                                <p class="card-text"><small class="text-muted">Default Metric: ${blueprint.defaultMetric}</small></p>
                                <p class="card-text">
                                    <strong>Nodes:</strong> ${blueprint.nodes.length} | 
                                    <strong>Edges:</strong> ${blueprint.edges.length}
                                </p>
                            </div>
                        </div>
                    `;
                    container.appendChild(card);
                });
            } catch (error) {
                console.error('Error loading blueprints:', error);
            }
        }
        
        document.getElementById('seedDefaultsBtn').addEventListener('click', async () => {
            try {
                const response = await fetch('/api/flowblueprints/seed-defaults', {
                    method: 'POST'
                });
                const result = await response.json();
                alert(result.message || 'Blueprints seeded successfully');
                loadBlueprints();
            } catch (error) {
                alert('Error seeding blueprints: ' + error.message);
            }
        });
        
        document.getElementById('refreshBtn').addEventListener('click', loadBlueprints);
        
        // Load on page load
        loadBlueprints();
    </script>
}









