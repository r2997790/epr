@model List<EPR.Domain.Entities.PackagingType>
@{
    ViewData["Title"] = "Packaging Items";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between mb-4">
        <h1><i class="bi bi-tags"></i> Packaging Items</h1>
        <div class="gap-2 d-flex">
            <a href="@Url.Action("PackagingBuilder")" class="btn btn-success">
                <i class="bi bi-diagram-3"></i> Visual Builder
            </a>
            <a href="@Url.Action("Create")" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Add Packaging Type
            </a>
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-md-4">
            <input type="text" class="form-control" id="searchInput" placeholder="Search packaging types...">
        </div>
        <div class="col-md-4">
            <select class="form-select" id="filterLibrary">
                <option value="">All Sources</option>
                <option value="library">From Library</option>
                <option value="user">User Created</option>
            </select>
        </div>
        <div class="col-md-4">
            <div class="form-check">
                <input class="form-check-input" type="checkbox" id="showFavorites">
                <label class="form-check-label" for="showFavorites">
                    Show Favorites Only
                </label>
            </div>
        </div>
    </div>

    @if (Model != null && Model.Any())
    {
        <div class="row" id="packagingGrid">
            @foreach (var item in Model)
            {
                <div class="col-md-3 mb-3 packaging-item-card" data-name="@item.Name.ToLower()" data-library="@(item.IsFromLibrary ? "library" : "user")" data-favorite="@item.IsFavorite.ToString().ToLower()">
                    <div class="card h-100">
                        @if (!string.IsNullOrEmpty(item.ImageUrl))
                        {
                            <img src="@item.ImageUrl" class="card-img-top" alt="@item.Name" style="height: 150px; object-fit: cover;">
                        }
                        else
                        {
                            <div class="card-img-top bg-light d-flex align-items-center justify-content-center" style="height: 150px;">
                                <i class="bi bi-box" style="font-size: 3rem; color: #6c757d;"></i>
                            </div>
                        }
                        <div class="card-body">
                            <h5 class="card-title">
                                @item.Name
                                @if (item.IsFavorite)
                                {
                                    <i class="bi bi-star-fill text-warning"></i>
                                }
                            </h5>
                            <p class="card-text small text-muted">@item.Description</p>
                            @if (item.IsFromLibrary)
                            {
                                <span class="badge bg-info">@item.LibrarySource</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">Custom</span>
                            }
                        </div>
                        <div class="card-footer">
                            <div class="btn-group w-100" role="group">
                                <button class="btn btn-sm btn-outline-primary" onclick="editPackaging(@item.Id)">
                                    <i class="bi bi-pencil"></i>
                                </button>
                                <button class="btn btn-sm btn-outline-success" onclick="copyPackaging(@item.Id)">
                                    <i class="bi bi-copy"></i>
                                </button>
                                <button class="btn btn-sm btn-outline-warning" onclick="toggleFavorite(@item.Id)">
                                    <i class="bi bi-star"></i>
                                </button>
                                <button class="btn btn-sm btn-outline-danger" onclick="deletePackaging(@item.Id)">
                                    <i class="bi bi-trash"></i>
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="card">
            <div class="card-body text-center">
                <i class="bi bi-inbox" style="font-size: 3rem; color: #6c757d;"></i>
                <p class="mt-3">No packaging types found. Create your first one!</p>
                <a href="@Url.Action("Create")" class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i> Add Packaging Type
                </a>
            </div>
        </div>
    }
</div>

<script>
    document.getElementById('searchInput').addEventListener('input', filterPackaging);
    document.getElementById('filterLibrary').addEventListener('change', filterPackaging);
    document.getElementById('showFavorites').addEventListener('change', filterPackaging);

    function filterPackaging() {
        const search = document.getElementById('searchInput').value.toLowerCase();
        const library = document.getElementById('filterLibrary').value;
        const favorites = document.getElementById('showFavorites').checked;

        document.querySelectorAll('.packaging-item-card').forEach(card => {
            const name = card.dataset.name;
            const lib = card.dataset.library;
            const fav = card.dataset.favorite === 'true';

            const matchSearch = name.includes(search);
            const matchLibrary = !library || lib === library;
            const matchFavorites = !favorites || fav;

            card.style.display = (matchSearch && matchLibrary && matchFavorites) ? 'block' : 'none';
        });
    }

    function editPackaging(id) {
        window.location.href = '@Url.Action("Edit")?id=' + id;
    }

    function copyPackaging(id) {
        // Copy functionality
        alert('Copy functionality coming soon');
    }

    function toggleFavorite(id) {
        // Toggle favorite
        alert('Favorite toggle coming soon');
    }

    function deletePackaging(id) {
        if (confirm('Are you sure you want to delete this packaging type?')) {
            // Delete functionality
            alert('Delete functionality coming soon');
        }
    }
</script>


