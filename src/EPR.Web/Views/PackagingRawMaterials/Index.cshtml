@model List<EPR.Domain.Entities.PackagingRawMaterial>
@{
    ViewData["Title"] = "Packaging Raw Materials";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between mb-4">
        <h1><i class="bi bi-box-seam"></i> Packaging Raw Materials</h1>
        <div class="gap-2 d-flex">
            <button class="btn btn-success" onclick="exportToExcel()">
                <i class="bi bi-file-earmark-excel"></i> Export to XLSX
            </button>
            <a href="@Url.Action("Create")" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Add Material
            </a>
        </div>
    </div>

    <div class="card">
        <div class="card-body">
            @if (Model != null && Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Category</th>
                                <th>Jurisdictions</th>
                                <th>EPR Fees</th>
                                <th>EcoModularity</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var material in Model.Where(m => m.ParentMaterialId == null))
                            {
                                <tr>
                                    <td>
                                        <strong>@material.Name</strong>
                                        @if (!string.IsNullOrEmpty(material.Specification))
                                        {
                                            <br><small class="text-muted">@material.Specification</small>
                                        }
                                    </td>
                                    <td>
                                        @if (material.SubMaterials.Any())
                                        {
                                            <span class="badge bg-info">Parent Category</span>
                                        }
                                        else if (material.ParentMaterialId.HasValue)
                                        {
                                            <span class="badge bg-secondary">Sub-category</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-primary">Top Level</span>
                                        }
                                    </td>
                                    <td>
                                        @if (material.Jurisdictions.Any())
                                        {
                                            @string.Join(", ", material.Jurisdictions.Select(j => j.Jurisdiction.Name))
                                        }
                                        else
                                        {
                                            <span class="text-muted">None</span>
                                        }
                                    </td>
                                    <td>
                                        @if (material.Jurisdictions.Any())
                                        {
                                            <span class="badge bg-success">@material.Jurisdictions.Count Fee(s)</span>
                                        }
                                        else
                                        {
                                            <a href="@Url.Action("AddJurisdiction", new { materialId = material.Id })" class="btn btn-sm btn-outline-primary">
                                                <i class="bi bi-plus"></i> Add
                                            </a>
                                        }
                                    </td>
                                    <td>
                                        <span class="badge bg-info">Configure</span>
                                    </td>
                                    <td>
                                        <div class="btn-group" role="group">
                                            <a href="@Url.Action("Edit", new { id = material.Id })" class="btn btn-sm btn-outline-primary">
                                                <i class="bi bi-pencil"></i>
                                            </a>
                                            <button class="btn btn-sm btn-outline-danger" onclick="deleteMaterial(@material.Id)">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                                @foreach (var subMaterial in material.SubMaterials)
                                {
                                    <tr style="background-color: #f8f9fa;">
                                        <td style="padding-left: 2rem;">
                                            <i class="bi bi-arrow-return-right"></i> @subMaterial.Name
                                        </td>
                                        <td><span class="badge bg-secondary">Sub-category</span></td>
                                        <td>
                                            @if (subMaterial.Jurisdictions.Any())
                                            {
                                                @string.Join(", ", subMaterial.Jurisdictions.Select(j => j.Jurisdiction.Name))
                                            }
                                            else
                                            {
                                                <span class="text-muted">None</span>
                                            }
                                        </td>
                                        <td>
                                            @if (subMaterial.Jurisdictions.Any())
                                            {
                                                <span class="badge bg-success">@subMaterial.Jurisdictions.Count Fee(s)</span>
                                            }
                                            else
                                            {
                                                <a href="@Url.Action("AddJurisdiction", new { materialId = subMaterial.Id })" class="btn btn-sm btn-outline-primary">
                                                    <i class="bi bi-plus"></i> Add
                                                </a>
                                            }
                                        </td>
                                        <td><span class="badge bg-info">Configure</span></td>
                                        <td>
                                            <div class="btn-group" role="group">
                                                <a href="@Url.Action("Edit", new { id = subMaterial.Id })" class="btn btn-sm btn-outline-primary">
                                                    <i class="bi bi-pencil"></i>
                                                </a>
                                                <button class="btn btn-sm btn-outline-danger" onclick="deleteMaterial(@subMaterial.Id)">
                                                    <i class="bi bi-trash"></i>
                                                </button>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <i class="bi bi-inbox" style="font-size: 3rem; color: #6c757d;"></i>
                    <p class="mt-3">No raw materials found. Create your first one!</p>
                    <a href="@Url.Action("Create")" class="btn btn-primary">
                        <i class="bi bi-plus-circle"></i> Add Material
                    </a>
                </div>
            }
        </div>
    </div>
</div>

<script>
    function deleteMaterial(id) {
        if (confirm('Are you sure you want to delete this material?')) {
            // Delete functionality
            alert('Delete functionality coming soon');
        }
    }

    function exportToExcel() {
        window.location.href = '@Url.Action("Export")';
    }
</script>
