@using System.Web.UI.WebControls;
@using Selerant.DevEx.WebMvcModules.Infrastructure.Controls.Models;
@using Selerant.DevEx.WebMvcModules.Infrastructure.Controls.Helpers;
@using Selerant.DevEx.Modules.DIRModule.WebMvcFrontEnd.Areas.DIRAdminTools.Models
@using Selerant.DevEx.WebMvcModules.Infrastructure.Views

@inherits DevExPartialView<EditAssessmentTypeModel>

    <div id="AssessmentTypeDialog">
        <div id="ErrorsNotificationPanel"></div>

        <div id="AssessmentTypePanel" class="container-fluid" style="margin-left: 20px">
            <!-- AssessmentType Description -->
            <div class="container-fluid">
                <div class="row">
                    <div class="col-6">
                        @{
                            var desriptionLabel = Html.LabelControlFor(x => x.AssessmentTypeDescription, Model.GetType())
                                .SetKnownSkin(LabelControlIndexModel.KnownSkins.SkForm)
                                .SetWidth(new Unit(100, UnitType.Percentage)) as LabelControlIndexModel;
                        }
                        @(desriptionLabel)
                    </div>
                    <div class="col-6">
                        @{
							var description = Html.TextControlFor(x => x.AssessmentTypeDescription)
								.SetKnownSkin(TextControlIndexModel.KnownSkins.SkForm)
								.SetValue(Model.AssessmentTypeDescription.Value)
								.SetValidationSettings(new Selerant.DevEx.WebControls.TextValidationSettings() { IsRequired = true })
								.SetReadOnly(!Model.IsEditMode)
								.SetWidth(new Unit(100, UnitType.Percentage)) as TextControlIndexModel;
                        }
                        @(description)
                    </div>
                </div>
            </div>
            <!-- AssessmentType Code -->
            <div class="container-fluid">
                <div class="row">
                    <div class="col-6">
                        @{
                            var codeLabel = Html.LabelControlFor(x => x.AssessmentTypeCode, Model.GetType())
                                .SetKnownSkin(LabelControlIndexModel.KnownSkins.SkForm)
                                .SetWidth(new Unit(100, UnitType.Percentage)) as LabelControlIndexModel;
                        }
                        @(codeLabel)
                    </div>
                    <div class="col-3">
                        @{
                            var code = Html.TextControlFor(x => x.AssessmentTypeCode)
                                .SetKnownSkin(TextControlIndexModel.KnownSkins.SkForm)
                                .SetValue(!String.IsNullOrEmpty(Model.AssessmentTypeCode.Value) ? Model.AssessmentTypeCode.Value : ResText.Global.GetString("AutoGenerated"))
								.SetValidationSettings(new Selerant.DevEx.WebControls.TextValidationSettings() { IsRequired = true })
                                .SetReadOnly(true)
                                .SetSpaceKeyBlocked()
                                .SetWidth(new Unit(100, UnitType.Percentage)) as TextControlIndexModel;
                        }
                        @(code)

                    </div>
                    <div class="col-3">
                        <label id="labelForAutoGen" onclick="DX.Ctrl.findParentControlOfType(this, DX.DIRModule.DIRAdminTools.AssessmentTypes.EditAssessmentTypeDialog)">
                            @(Html.BooleanControl("codeAutoGen")
                                .SetKnownSkin(BooleanControlIndexModel.KnownSkins.SkForm)
                                .SetAutomationId("codeAutoGen")
                                .SetReadOnly(!Model.IsNewAssessmentType)
                                .SetValue(Model.IsNewAssessmentType)
                            )
                            @(ResText.RecipeBlock.GetString("NewObjectAutoGen"))
                        </label>
                    </div>
                </div>
            </div>

        </div>
    </div>
